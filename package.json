{
  "name": "clothi-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "cd apps/api && node src/server.js",
    "dev": "cd apps/api && node src/server.js",
    
    "db:migrate": "cd apps/api && npx sequelize-cli db:migrate",
    "db:seed": "cd apps/api && npx sequelize-cli db:seed:all",
    "db:setup": "npm run db:migrate && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}