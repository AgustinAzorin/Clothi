# clothi/apps/web/.npmrc
# Configuración específica del frontend (Next.js)

# Next.js specific
next_telemetry_disabled=1
next_skip_trailing_slash_redirect=1

# Para Three.js y dependencias pesadas
three_skip_postinstall=true
gl_skip_postinstall=true

# Optimización de instalación de dependencias
shamefully-hoist=true

# Para desarrollo local
strict-peer-dependencies=false

# Para sharp en Next.js
sharp_install_from_npm=true

# Evitar descarga de binaries innecesarios
optional=false

# Para Storybook (si lo usas)
storybook_telemetry=false